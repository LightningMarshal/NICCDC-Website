@*
    This file is used to determine which layout should be used when a certain controller is being used.
*@
@{
    var CurrentControllerName = ViewContext.RouteData.Values["controller"].ToString();
    Console.WriteLine(CurrentControllerName);
    switch (CurrentControllerName)
    {
        case "Application":
            Layout = "~/Views/Shared/_Layout.cshtml";
            break;           
        default:
            Layout = "~/Views/Shared/_NICCDCLayout.cshtml";
            break;

    }
    
}